// 自定义vue容器阴影样式-----------------------------------------------------------------------------------------------------
.note {
  margin: 1rem 0;
  padding: 0.1rem 1.5rem;
  border-radius: 0.4rem;
  background-color: #f0f4f8;

  .title {
    font-weight: bold;
  }
}

.note {
  position: relative;
  box-shadow: 0px 1px 4px rgba(0, 0, 0, 0.3), 0px 0px 20px rgba(0, 0, 0, 0.1) inset;
}

.note::before, .note::after {
  content: '';
  position: absolute;
  z-index: -1;
}

.note::before, .note::after {
  content: '';
  position: absolute;
  z-index: -1;
  bottom: 15px;
  left: 10px;
  width: 50%;
  height: 20%;
}

.note::before, .note::after {
  content: '';
  position: absolute;
  z-index: -1;
  bottom: 15px;
  left: 10px;
  width: 50%;
  height: 20%;
  box-shadow: 0 15px 10px rgba(0, 0, 0, 0.7);
  transform: rotate(-3deg);
}

.note::after {
  right: 10px;
  left: auto;
  transform: rotate(3deg);
}

