  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-size: 200% 100%;
  animation: a-hover-masked-animation 2s infinite linear;
}

@keyframes a-hover-masked-animation {
    0% {
        background-position: 0 0;
    }
    100% {
